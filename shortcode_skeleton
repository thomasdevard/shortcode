//toggle shortcode
 function toggle_shortcode( $atts, $content = null ) {
 extract( shortcode_atts(
 array(
 'title' => 'Click To Open',
 'color' => ''
 ),
 $atts ) );
 return '<h3 class="trigger "><a href="#">'. $title .'</a></h3><div class="toggle_container '.$color.'">' . do_shortcode($content) . '</div>';
 }
 add_shortcode('toggle', 'toggle_shortcode');

