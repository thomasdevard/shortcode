<?php 

//         1 colonne
-------------------------------------------------------------------------------//

function onecolumn( $atts, $content = null ) {
   return '<div class="one column">' . do_shortcode($content) . '</div>';
}
add_shortcode('one', 'onecolumn');

//1 colonne alpha //
function onecolumnalpha( $atts, $content = null ) {
   return '<div class="one column alpha">' . do_shortcode($content) . '</div>';
}
add_shortcode('one_alpha', 'onecolumnalpha');

//1 colonne omega //
function onecolumnomega( $atts, $content = null ) {
   return '<div class="one column omega">' . do_shortcode($content) . '</div>';
}
add_shortcode('one_omega', 'onecolumnomega');

